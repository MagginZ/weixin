.todo-container{
  padding: 0 40rpx;
  background-color: #f5f5f5;
  height: 100vh;
  border:1px solid transparent;
  font-size: 26rpx;
}
.todo-input{
  margin:40rpx 0;
}
.todo-input input{
  color:#333;
  
}
.todo-button{
  margin-bottom: 40rpx;
}
.todo-button button{
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.todo-list .todo-count{
  color:#0269c8;
  margin-bottom: 30rpx;
  display: block;
}
.todo-list .todo-list-content .todo-list-item{
  border-bottom: 1px solid #ccc;
  padding:20rpx;
}
.todo-list .todo-list-content .todo-list-item:first-child{
  border-top: 1px solid #ccc;
}
.list-item-icon{
  width:30rpx;
  height: 30rpx;
  margin-right:20rpx;
}